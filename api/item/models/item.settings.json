{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "items",
  "info": {
    "name": "Item"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "published",
        "draft"
      ],
      "default": "published"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "pages.gallery",
        "pages.quote",
        "pages.video"
      ],
      "required": true,
      "min": 1,
      "max": 1
    },
    "lang_pt_br": {
      "type": "boolean",
      "default": true
    },
    "lang_en": {
      "type": "boolean",
      "default": false
    }
  }
}
