{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "items",
  "info": {
    "name": "Item"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "published_at": {
      "type": "date",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "published",
        "draft"
      ],
      "default": "published"
    },
    "author": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "text",
        "gallery",
        "video"
      ],
      "required": true
    }
  }
}
